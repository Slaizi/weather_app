<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">
<suppressions>
    <suppress checks="MissingJavadocMethod"/>
    <suppress checks="JavadocPackage"/>
    <suppress checks="JavadocVariable"/>
    <suppress checks="DesignForExtension"/>
    <suppress checks="HideUtilityClassConstructor"/>
    <suppress checks="MagicNumber"/>
    <suppress checks="HiddenField"/>
    <suppress checks="AvoidStarImportCheck"/>

    <!-- Suppress line length check for specific files -->
    <suppress checks="LineLength" files=".*RefreshRequest.java"/>
    <suppress checks="LineLength" files=".*SignInRequest.java"/>
    <suppress checks="LineLength" files=".*JwtResponse.java"/>
    <suppress checks="LineLength" files=".*SignUpRequest.java"/>
    <suppress checks="LineLength" files=".*SignUpResponse.java"/>
    <suppress checks="LineLength" files=".*ExceptionBody.java"/>
</suppressions>